<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="MTO_issues_form" model="ir.ui.view">
        <field name="name">MTO_issues_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="mto_buy_check"/>
            </xpath>
            <xpath expr="//field[@name='image_1920']" position="before">
                <field name="warning_notification_mto" invisible="1"/>
                <div role="alert" class="alert alert-danger" style="height:40px, width:30px, margin-bottom:1px" attrs="{'invisible':[('warning_notification_mto','=',True)]}">
                        This product has no Supplier
                </div>
            </xpath>
            <xpath expr="//field[@name='image_1920']" position="before">
                <field name="warning_notification_mrp" invisible="1"/>
                <div role="alert" class="alert alert-danger" style="height:40px, width:30px, margin-bottom:1px" attrs="{'invisible':[('warning_notification_mrp','=',True)]}">
                        This product has no BoM
                </div>
            </xpath>
        </field>
    </record>
</odoo>




